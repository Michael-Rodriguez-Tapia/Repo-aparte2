<div class="content is-normal">
  <h1>Log in</h1>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :email, class: "label" %>
    <div class="control has-icons-left has-icons-right">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", placeholder: "Ingresa tu Email" %>
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <%= f.label :contraseña, class: "label" %>
    <div class="control has-icons-left has-icons-right">
      <%= f.password_field :password, autocomplete: "current-password", class:"input", placeholder: "Ingresa tu Contraseña" %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: "checkbox" %>
      <%= f.label :recuerdame, class: "checkbox" %>
    </div>
  <% end %>

  <div class="field is-grouped">
    <div class="control">
      <%= f.submit "Inicar Sesión", class: "button is-link" %>
    </div>

    <div class="control">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Registrarse", new_registration_path(resource_name), class: "button is-link" %><br />
      <% end %>
    </div>

    <div class="control">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "button is-link" %><br />
      <% end %>
    </div>

    <div class="control">
      <%= link_to "Volver", "/", class: "button is-link is-light" %>
    </div>
  </div>

<% end %>
